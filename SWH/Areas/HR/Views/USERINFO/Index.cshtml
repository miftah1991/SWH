                    var varURL = ($("#USERID").val() == '' || $("#USERID").val() == null) ? '@Url.Action("Create")' : '@Url.Action("Edit")';
                    if ($("#USERID").val() == '') {
                        $("#USERID").remove();
                    }
                    $.ajax(
                    {
                        url: varURL,
                        type: 'post',
                        data: $('#frmUsers').serialize(),
                        success: function (result) {
                            if (result == "true") {
